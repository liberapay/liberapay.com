from mangopay.resources import BankAccount, Card

from liberapay.models.exchange_route import ExchangeRoute
from liberapay.utils import get_participant, obfuscate

_ = lambda a: a
PAYMENT_METHODS = {
    'mango-ba': _("Direct Debit"),
    'mango-bw': _("Bank Wire"),
    'mango-cc': _("Credit Card"),
}
del _

[---]

participant = get_participant(state, restrict=True)

e_id = request.path['exchange_id'].split('.html')[0]
try:
    int(e_id)
except ValueError:
    raise response.error(404)

exchange = website.db.one("""
    SELECT *
      FROM exchanges
     WHERE id = %s
       AND participant = %s
       AND amount > 0
       AND refund_ref IS NULL
""", (e_id, participant.id))
if exchange is None or exchange.status != 'succeeded':
    raise response.error(404)

route = ExchangeRoute.from_id(exchange.route)
if route.network == 'mango-cc':
    card = Card.get(route.address)
elif route.network == 'mango-ba':
    bank_account = BankAccount.get(route.address, user_id=participant.mangopay_user_id)

account = participant.get_mangopay_account()

[---] text/html
