            {{ account.FirstName }} {{ account.LastName }}
        % elif participant.kind == 'organization'
            {{ account.Name }}
            ({{ account.LegalRepresentativeFirstName }} {{ account.LegalRepresentativeLastName }})
        % endif
        <br>
