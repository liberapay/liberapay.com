# coding: utf8

[-----------------------------]

teams = website.db.all("""

    SELECT t.*
         , p.*::participants AS participant
      FROM ( SELECT team AS id, count(member) AS nmembers
               FROM current_takes
           GROUP BY team
            ) AS t
      JOIN participants p
        ON p.id = t.id
     WHERE (p.goal >= 0 OR p.goal IS NULL)
       AND p.hide_from_lists = 0
  ORDER BY receiving DESC, join_time DESC

""")
nteams = len(teams)
title = _("Explore")
subhead = _("Teams")

[-----------------------------] text/html
