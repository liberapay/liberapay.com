    <div class="section no-border">
        <h2></h2>
        <p class="buttons">
            <a class="btn btn-info btn-lg" href="/about/">
                {{ glyphicon('info-sign') }} <span>{{ _("Learn more") }}</span>
            </a>
            <br>
            <a class="btn btn-info btn-lg" href="/about/feeds">
                {{ fontawesome('feed') }} <span>{{ _("Follow us") }}</span>
            </a>
        </p>
    </div>

% endblock
